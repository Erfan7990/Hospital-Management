<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--    Create search View -->
    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>

            </search>
        </field>
    </record>

    <!--    create Tree View -->
    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="gender"/>
                <field name="appointment_time"/>
                <field name="booking_date"/>
            </tree>
        </field>
    </record>

    <!--    create form view   -->
    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <field name="priority" widget="priority"/>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="gender"/>
                            <field name="reference"/>
                        </group>
                        <group>
                            <field name="appointment_time"/>
                            <field name="booking_date"/>

                        </group>

                    </group>

                    <notebook>
                        <page string="Prescription" name="prescription">
                            <field name="prescription" placeholder="Write Patient Prescription  "></field>
                        </page>
                        <page string="Patient Test Report" name="patient_test_report"></page>
                    </notebook>

                    <notebook>
                        <page string="Pharmacy" name="pharmacy"></page>
                        <page string="Do/Not to Do" name="do_not_to_do"></page>
                    </notebook>
                </sheet>
                <!--  Adding Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <!--    generate menu action  -->
    <record id="action_hospital_patient_appointment" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your First appointment !
            </p>
        </field>
    </record>

    <!--    child submenu   -->
    <menuitem id="menu_appointment"
              name="Patient Appointments"
              action="action_hospital_patient_appointment"
              parent="menu_appointment_master"
              sequence="0"/>


</odoo>